
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBAL HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(resource) {
      return isSignedIn() && resource.data.createdBy == request.auth.uid;
    }

    // --- COLLECTION RULES ---

    match /roles_admin/{adminUid} {
      allow get: if isSignedIn() && request.auth.uid == adminUid;
      allow list: if isAdmin();
      allow create, update, delete: if false;
    }

    match /published_route_points/{routePointId} {
      // Kdokoliv může prohlížet trasy v katalogu
      allow get, list: if true;
      
      // Vytvářet může kdokoliv přihlášený
      allow create: if isSignedIn();
      
      // Upravovat a mazat může autor nebo admin
      allow update, delete: if isAdmin() || isOwner(resource);

      match /images/{imageId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
      }
    }
  }
}
