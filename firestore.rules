rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBAL HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // --- COLLECTION RULES ---

    match /roles_admin/{adminUid} {
      allow get: if isSignedIn() && request.auth.uid == adminUid;
      allow list: if isAdmin();
      allow create, update, delete: if false;
    }

    match /published_route_points/{routePointId} {
      // Kdokoliv může číst
      allow get, list: if true;
      // Jakýkoliv přihlášený uživatel může vytvářet, upravovat a mazat
      allow create, update, delete: if isSignedIn();

      match /images/{imageId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
      }
    }

    match /draft_route_points/{routePointId} {
      allow get, list, create, update, delete: if isSignedIn();

      match /images/{imageId} {
        allow get, list, create, update, delete: if isSignedIn();
      }
    }
  }
}