rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- POMOCNÉ FUNKCE ---

    function isSignedIn() {
      return request.auth != null;
    }

    // Kontrola admina: dokument v roles_admin odpovídá UID uživatele
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Kontrola majitele: pole createdBy v dokumentu odpovídá UID uživatele
    function isOwner(resource) {
      return isSignedIn() && resource.data.createdBy == request.auth.uid;
    }

    // --- PRAVIDLA KOLEKCÍ ---

    match /users/{userId} {
      // Uživatel může číst a psát pouze svůj vlastní profil
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    match /roles_admin/{adminUid} {
      // Čtení role povoleno pouze danému uživateli
      allow read: if isSignedIn() && request.auth.uid == adminUid;
      allow write: if false; // Admini se nastavují pouze ručně v konzoli
    }

    match /published_route_points/{routePointId} {
      // Veřejné čtení pro všechny (mapa i katalog)
      allow read: if true;
      
      // Vytváření - jakýkoliv přihlášený uživatel
      allow create: if isSignedIn();
      
      // Úprava a smazání - pouze autor trasy nebo administrátor
      allow update, delete: if isAdmin() || isOwner(resource);
    }
  }
}