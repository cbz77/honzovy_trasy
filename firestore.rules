rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBÁLNÍ POMOCNÉ FUNKCE ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(resource) {
      return isSignedIn() && resource.data.createdBy == request.auth.uid;
    }

    // --- PRAVIDLA KOLEKCÍ ---

    match /published_route_points/{routePointId} {
      // Veřejné čtení (rozděleno na get a list pro maximální kompatibilitu s dotazy)
      allow get, list: if true;
      
      // Vytvářet může kdokoliv přihlášený
      allow create: if isSignedIn();
      
      // Upravovat a mazat může autor nebo admin
      allow update, delete: if isAdmin() || isOwner(resource);

      match /images/{imageId} {
        allow read: if true;
        allow write: if isSignedIn();
      }
    }

    match /roles_admin/{adminUid} {
      allow get: if isSignedIn() && request.auth.uid == adminUid;
      allow list: if isAdmin();
      allow create, update, delete: if false;
    }

    match /users/{userId} {
      allow get: if isSignedIn() && request.auth.uid == userId;
      allow create, update: if isSignedIn() && request.auth.uid == userId;
      allow list: if isAdmin();
    }
  }
}